APP_NAME=response-std
APP_PORT=5220
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=response-std

JWT_SECRET=supersecretkey

REQUEST_TIMEOUT=5s
MAX_RETRIES=3
RETRY_DELAY=200ms
ENABLE_LOGGING=TRUE

LOG_LEVEL=debug
ENVIRONMENT=development

# Log Channel Configuration
# Options: file, discord, both
LOG_CHANNEL=both
# Discord webhook URL (required if LOG_CHANNEL includes discord)
DISCORD_WEBHOOK_URL=
# Min log level for Discord notifications (debug, info, warn, error, critical)
DISCORD_MIN_LOG_LEVEL=error
# Enable/disable file logging
LOG_TO_FILE=true
# Log file directory
LOG_DIR=storage/logs


API_VERSION=v1,web
API_BASE_URL=http://localhost:5220/api/v1

# external api base URLs and keys 
# change external name to the actual service name
# Example: if you are using a weather API, you might have: WEATHER_API_BASE_URL
# and WEATHER_API_KEY
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your_api_key_here